{
  "overrides": [
    {
      "files": "*.js",
      "options": {
        "printWidth": 120,
        "parser": "flow",
        "singleQuote": true,
        "tabWidth": 4,
        "trailingComma": "es5",
        "semi": true,
        "bracketSpacing": true,
        "arrowParens": "avoid"
      }
    },
    {
      "files": "*.scss",
      "options": {
        "parser": "scss"
      }
    }
  ]
}
